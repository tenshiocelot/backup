import argparse

def power(n):
	return n**2

def Main():
	parser = argparse.ArgumentParser()
	parser.add_argument('num', help = "The number you wish to power", type = int)
	parser.add_argument("-r", "--root", help = "Returns the root of your input", action = "store_true")

	args = parser.parse_args()

	result = power(args.num)
	print("The number " + str(args.num) + " powered to 2 equals " + str(result) + "!!!")

	if args.root:
		x = args.num * 0.5
		print(x)



if __name__ == '__main__':
	Main()
